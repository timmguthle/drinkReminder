WindowManager:
    MainW:
    SecondW:

<MainW>:
    name: 'main'
    GridLayout:
        cols: 1
        GridLayout:
            cols: 2
            Label:
                text: 'password: '
            TextInput:
                id: textinput
                multiline: False

        Button:
            text: 'submit'
            on_release:
                app.root.current = 'second'
                root.manager.transition.direction = 'left'
<SecondW>
    name: 'second'

    Button:
        text: 'go back'
        on_release:
            app.root.current = 'main'
            root.manager.transition.direction = 'right'